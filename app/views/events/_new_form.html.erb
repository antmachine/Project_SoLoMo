	<%= form_for @event, :html => { :multipart => true } do |f| %>

 		<%= f.label "Date: " %>
 		<br>
 		<%= f.text_field :date, :autofocus => true, :id => "date", :placeholder => "(DD/MM/YY)"%>
   	<br>
   	<%= f.label "Location address: " %>
   	<br>
   	<%= f.text_area :address, :autofocus => true, :id => "address", :placeholder =>"i.e. 414 Brannan St.", :style => "width: 300px; height: 50px;"%>
    <br>
    <br>
    <%= f.label "Description/Text:" %>
    <br>
    <%= f.text_area :description, :autofocus => true, :id => "description", :placeholder => "Custom message about your event", :style => "width: 300px; height: 110px;"%>
	  <br>
	  <br>
	  <%= f.label :image, "Photo" %>
	  <br>
      <%= f.fields_for :pictures do |builder|  %>
        <%= builder.label :image, "photo" %>
        <%= builder.file_field :image %>
        <% end %>
	  <br>


	  <p><p>
	  <%= f.submit "Submit", class: "btn btn-success" %>
	<% end %>
