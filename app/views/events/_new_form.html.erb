	<%= form_for @event, :html => { :multipart => true } do |f| %>

 		<%= f.label "Date: " %>
 		<br>
 		<%= f.text_field :date, :autofocus => true, :id => "date", :placeholder => "(DD/MM/YY)"%>
 		<br>
 		<br>
 		<%= f.label "Time: " %>
 		<br>
  	<%= f.text_field :time, :autofocus => true, :id => "time", :placeholder => "(time)"%>
   	<br>
   	<br>
   	<%= f.label "Location address: " %>
   	<br>
   	<%= f.text_field :address, :autofocus => true, :id => "address", :placeholder =>"i.e. 414 Brannan St."%>
    <br>
    <br>
    <%= f.label "Description/Text:" %>
    <br>
    <%= f.text_field :description, :autofocus => true, :id => "description", :placeholder => "Custom message about your event", :style => "width: 300px; height: 100px;"%>
	  <br>
	  <br>
	  <%= f.label :image, "Photo" %>
	  <br>
    <%= f.file_field :image %> 
	  <br>


	  <p><p>
	  <%= f.submit "Submit", class: "btn btn-success" %>
	<% end %>
<input type="text" id="datetime12" data-format="DD-MM-YYYY h:mm a" data-template="DD / MM / YYYY     hh : mm a" name="datetime" value="21-12-2012 8:30 pm">
<script>
$(function(){
    $('#datetime12').combodate();  
});
</script>