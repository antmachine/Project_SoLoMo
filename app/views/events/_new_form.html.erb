	<%= form_for @event, :html => { :multipart => true } do |f| %>

 		
 		<%= f.label "Date & Time: " %>
   	<br>
    <input id="datetimepicker" type="text" >
    <br>


   	<%= f.label "Location address: " %>
   	<br>
   	<%= f.text_field :address, :autofocus => true, :id => "address", :placeholder =>"i.e. 414 Brannan St."%>
    <br>
    <br>
    <%= f.label "Description/Text:" %>
    <br>
    <%= f.text_field :description, :autofocus => true, :id => "description", :placeholder => "Custom message about your event", :style => "width: 300px; height: 100px;"%>
	  <br>
	  <br>
	  <%= f.label :image, "Photo" %>
	  <br>
    <%= f.file_field :image %> 
	  <br>


	  <p><p>
	  <%= f.submit "Submit", class: "btn btn-success" %>
	<% end %>
<link rel="stylesheet" type="text/css" href="/jquery.datetimepicker.css"/ >
<script src="/jquery.js"></script>
<script src="/jquery.datetimepicker.js"></script>
<script type="text/javascript">jQuery('#datetimepicker').datetimepicker();</script>

