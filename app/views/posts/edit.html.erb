<h1>Editing post</h1>

<%= form_for @post do |f| %>
  <%= f.text_field :title, placeholder: "Post title" %>
  <%= f.text_field :body, placeholder: "Message to post" %>
  <%= f.fields_for :comments, @post.comments.build do |b| %>
  	<%= b.text_field :title, placeholder: "Comment title" %>
  <% end %>
  <%= f.submit %>

<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Index', posts_path %>
