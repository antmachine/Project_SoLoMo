<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>


<p>
	<b>Comments:</b>
	<ul>
		<%= render :partial => 'comments/comment', :collection => @post.comments %>
	</ul>
</p>

<p>
	<b>New Comment:</b>
	<%= form_for [@post, Comment.new] do |f| %>
	  <p>
	    <%= f.label :title %><br />
	    <%= f.text_area :title %>
	  </p>
	  <p><%= f.submit "Submit" %></p>
	<% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Index', posts_path %>
